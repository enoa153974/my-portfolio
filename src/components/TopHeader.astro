---
//meta情報のインポート
import siteData from '../../siteData.mjs';

//baselayout.astro → currentPathの受け取り
const { class: className, currentPath, isTopPage } = Astro.props;
---

<header class={`l-header flex ${className}`}>
    <div class="header__container l-container flex items-center px-6">
        <div class="header__inner flex justify-center w-full">
            <!-- ハンバーガーボタン（SP用） -->
            <button class="hamburger openbtn" aria-label="メニューを開く">
                <span></span><span></span><span></span>
            </button>

            <!-- メニュー -->
            <!-- PCナビ -->

            <div class="header__parette img-wrapper position-relative">
                <picture>
                    <source media="(max-width: 768px)" srcset="/assets/image/header_bg.png" />
                    <source media="(min-width: 769px)" srcset="/assets/image/header_palette.png" />
                    <img src="/assets/image/header_palette.png" alt="" />
                </picture>
            </div>

            <div class="header__text-box l-row position-absolute">
                <!-- 横幅4/8レイアウト -->
                <div
                    class="header__logo flex flex-col items-center l-column l-column--4 pl-10"
                    data-aos="fade"
                    data-aos-delay="200"
                    data-aos-duration="800"
                >
                    <div>
                        <a href={siteData.home.path}
                            ><img src="/assets/image/logo_name.png" alt="" class="header__nav-icon block" /></a
                        >
                    </div>
                </div>

                <div class="l-column l-column--8">
                    <!-- 縦幅1/1のレイアウト -->
                    <div class="flex flex-col">
                        <nav class="header__nav pc-nav">
                            <ul class="header__nav-inner font-bold w-full l-row l-row--gap text-center items-center">
                                <li
                                    class="l-column l-column--2 flex justify-center items-center mt-20 en hover-opacity"
                                    data-aos="fade"
                                    data-aos-delay="400"
                                    data-aos-duration="800"
                                >
                                    <a href={siteData.home.path} class={currentPath === '/home' ? 'is-active' : ''}
                                        >home</a
                                    >
                                </li>
                                <li
                                    class="l-column l-column--3 flex justify-center items-center en hover-opacity"
                                    data-aos="fade"
                                    data-aos-delay="600"
                                    data-aos-duration="800"
                                >
                                    <a href={siteData.about.path} class={currentPath === '/about' ? 'is-active' : ''}
                                        >about</a
                                    >
                                </li>
                                <li
                                    class="l-column l-column--2 flex justify-center items-center en hover-opacity mt-4"
                                    data-aos="fade"
                                    data-aos-delay="800"
                                    data-aos-duration="800"
                                >
                                    <a href={siteData.works.path} class={currentPath === '/works' ? 'is-active' : ''}
                                        >works</a
                                    >
                                </li>
                                <li
                                    class="l-column l-column--3 flex justify-center items-center en hover-opacity"
                                    data-aos="fade"
                                    data-aos-delay="800"
                                    data-aos-duration="800"
                                >
                                    <a href={siteData.columns.path} class={currentPath === '/columns' ? 'is-active' : ''}
                                        >columns</a
                                    >
                                </li>
                                <li
                                    class="l-column l-column--2 flex justify-center items-center mt-20 en hover-opacity"
                                    data-aos="fade"
                                    data-aos-delay="1000"
                                    data-aos-duration="800"
                                >
                                    <a
                                        href={siteData.contact.path}
                                        class={currentPath === '/contact' ? 'is-active' : ''}>contact</a
                                    >
                                </li>
                            </ul>
                        </nav>
                        <div class="header__sp-logo">
                            <div>
                                <a href={siteData.home.path}
                                    ><img src="/assets/image/logo_name.png" alt="" class="header__nav-icon block" /></a
                                >
                            </div>
                        </div>
                        <div class="header__brush img-wrapper">
                            <img src="/assets/image/header_brush.png" alt="" class="header__nav-icon block" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- スマホナビ -->
        <nav id="global-nav" class="sp-nav font-bold">
            <ul>
                <li><a href={siteData.home.path}>HOME</a></li>
                <li><a href={siteData.about.path}>about</a></li>
                <li><a href={siteData.works.path}>works</a></li>
                <!--                     <li><a href={siteData.contact.path}>contact</a></li> -->
            </ul>
        </nav>
    </div>
</header>
