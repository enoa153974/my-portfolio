---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Gallery from '../../components/Gallery.astro';

const pageId = 'works',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 3,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'works'
            }
        }
    ];

const currentPath = '/works';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
        <Gallery
        title="works"
        gallerys={[
            {
                image: '/assets/image/work_web_01.jpg',
                alt: ''
            }
        ]}
    />

</BaseLayout>