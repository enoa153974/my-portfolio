---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';
import WebGallery from '../../components/WebGallery.astro';
import LogoGallery from '../../components/LogoGallery.astro';
import IllustGallery from '../../components/IllustGallery.astro';
import WorksNav from '../../components/WorksNav.astro';
import MenuGallery from '../../components/MenuGallery.astro';
import AppGallery from '../../components/AppGallery.astro';
/* import Gallery from '../../components/Gallery.astro'; */

const pageId = 'works',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 2,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'works'
            }
        }
    ];

const currentPath = '/works';
const pageTitle = pageMeta.title;
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageTitle}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <!-- サイド -->
    <Fragment slot="side">
        <WorksNav active="all" />
    </Fragment>

    <!-- メインコンテンツ -->
    <Fragment slot="main">
        <h1 class="gallery__heading font-bold text-center en pt-10">works</h1>

        <section data-gallery-cat="web">
            <WebGallery />
        </section>

        <section data-gallery-cat="menu">
            <MenuGallery />
        </section>

        <section data-gallery-cat="logo">
            <LogoGallery />
        </section>

        <section data-gallery-cat="illust">
            <IllustGallery />
        </section>

        <section data-gallery-cat="app">
            <AppGallery />
        </section>

    </Fragment>
</BaseLayout>
