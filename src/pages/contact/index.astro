---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Contact from '../../components/Contact.astro';

const pageId = 'contact',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 4,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'contact'
            }
        }
    ];

const currentPath = '/contact';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Contact />
</BaseLayout>