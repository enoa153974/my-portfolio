---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Aboutprof from '../../components/Aboutprof.astro';
import Services from '../../components/Services.astro';

const pageId = 'about',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 2,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'about'
            }
        }
    ];

const currentPath = '/about';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Aboutprof />
    <Services
        title="service"
        items={[
            {
                image: '/assets/image/service_01.png',
                alt: '',
                id: 'web-design',
                aos: 'fade-right',
                delay: '200',
                duration: '800',
                pointTitle: 'webデザイン',
                text: 'webページのデザインをします。html、cssでのコーディングを行います。パソコンから見たデザインだけではなく、スマホやタブレットから見ても整った見やすいwebページを作成します。'
            },
            {
                image: '/assets/image/service_02.png',
                alt: '',
                id: 'graphic-design',
                aos: 'fade-left',
                delay: '400',
                duration: '800',
                pointTitle: 'グラフィックデザイン',
                text: 'ロゴマークやメニューの作成をします。「構想はあるんだけど絵心がなくて実現できない」「こんなイメージのロゴやメニューが作りたい」「おまかせでいい感じのロゴがほしい」などいろんなアプローチで柔軟に制作いたします。'
            },
            {
                image: '/assets/image/service_03.png',
                alt: '',
                id: 'illust',
                aos: 'fade-right',
                delay: '400',
                duration: '800',
                pointTitle: 'イラスト制作',
                text: '主に名刺やアイコンに使用しやすい似顔絵を作成します。また、店頭やウェディングなどのwelcomeボードに設置しやすい手描き似顔絵も作成できます。似顔絵以外にもワンポイントでイラストを入れたいなど、さまざまなシーンで対応可能ですのでお気軽にご相談ください。'
            },
            {
                image: '/assets/image/service_04.png',
                alt: '',
                id: 'pop',
                aos: 'fade-left',
                delay: '600',
                duration: '800',
                pointTitle: '手書きPOP・ボード作成',
                text: 'カフェの店頭ボードなど、デジタルにはない手書きならではの味のあるPOPやボードを作成します。通るたびについつい見てしまう・・・お客様の目を引く魅力的なPOPやボードに仕上げます。'
            }
        ]}
    />
</BaseLayout>
<!-- 各jsを初期化するsample.jsの読み込み -->
<script type="module" src="/assets/scripts/ui/sample.js"></script>
