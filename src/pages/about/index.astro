---
import siteData from '../../../siteData.mjs';
import Button from '../../components/Button';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Aboutprof from '../../components/Aboutprof.astro';
import Services from '../../components/Services.astro';
import ContactCTA from '../../components/ContactCTA.astro';

const pageId = 'about',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 2,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'about'
            }
        }
    ];

const currentPath = '/about';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Aboutprof />
    <Services
        title="service"
        items={[
            {
                image: '/assets/image/service_01.png',
                alt: '',
                id: 'web-design',
                aos: 'fade-right',
                delay: '200',
                duration: '800',
                pointTitle: '- webデザイン／フロントエンド -',
                pointSubTitle: 'お店やサービスの魅力を、Web上で正しく伝えるサイトを。',
                text: 'デザインだけで終わらせず、構成や動き、実装まで見据えたWeb制作を行っています。心地よく使いやすいwebサイトを目指しています。'
            },
            {
                image: '/assets/image/service_02.png',
                alt: '',
                id: 'graphic-design',
                aos: 'fade-left',
                delay: '400',
                duration: '800',
                pointTitle: '- グラフィックデザイン -',
                pointSubTitle: 'ロゴやメニューなど、お店の“顔”を形にします。',
                text: '「こんな雰囲気にしたい」「どう作ればいいかわからない」など、完成形が決まっていなくても大丈夫。言葉にならない想いを、目に見える形に。'
            },
            {
                image: '/assets/image/service_03.png',
                alt: '',
                id: 'illust',
                aos: 'fade-right',
                delay: '400',
                duration: '800',
                pointTitle: '- イラスト制作 -',
                pointSubTitle: '世界にひとつだけの似顔絵やイラストで、伝わる一枚をつくります。',
                text: '名刺やウェルカムボード、SNSアイコンなど、使う場面や目的に合わせて制作します。どんな場面で使うかを考えてから、タッチを決めていきます。'
            },
            {
                image: '/assets/image/service_04.png',
                alt: '',
                id: 'pop',
                aos: 'fade-left',
                delay: '600',
                duration: '800',
                pointTitle: '- 手書きPOP・ボード作成 -',
                pointSubTitle: '通った人達に「何のお店だろう」と思ってもらうきっかけをつくる',
                text: 'カフェの店頭ボードやメニューなど、デジタルでは出せない味わいを大切にしています。手描きならではのあたたかさで、お店の個性を表現して、足を止めてもらえるようなデザインを目指します。'
            }
        ]}
    />
    <div class="flex justify-end pb-10 pr-20 sm:pr-6">
        <Button href={siteData.works.path} className="works__btn" variant="push">
            <span>制作物：works はこちら</span>
        </Button>
    </div>
    <ContactCTA
        titleLine1="お問い合わせフォームからでも"
        titleLine2="公式ラインからでもお気軽にどうぞ！"
        buttonText="お問い合わせ"
        backgroundImage = "/assets/image/intro.jpg"
    />
</BaseLayout>
