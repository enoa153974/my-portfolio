---
import siteData from '../../siteData.mjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Intro from '../components/Intro.astro';
import Prof from '../components/Prof.astro';
import CTAlink from '../components/CTAlink.astro';

const pageId = 'home',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 1,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}`,
                name: 'HOME'
            }
        }
    ];

const currentPath = '/';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Intro />
    <Prof />
    <CTAlink
        items={[
            {
                text: 'Instagram',
                imgSrc: '/assets/image/cta_insta.png',
                imgAlt: '',
                buttonHref: '/page1'
            },
            {
                text: 'X',
                imgSrc: '/assets/image/cta_X.png',
                imgAlt: '',
                buttonHref: '/page2'
            }
        ]}
    />
</BaseLayout>
