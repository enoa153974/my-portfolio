---
import siteData from '../../siteData.mjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Intro from '../components/Intro.astro';
import IntroCardBox from '../components/IntroCardBox.astro';
import Prof from '../components/Prof.astro';
import CTAlink from '../components/CTAlink.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Button from '../components/Button';
import ColumnsPage from '../components/ColumnsPage.astro';

const pageId = 'home',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 1,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}`,
                name: 'HOME'
            }
        }
    ];

const currentPath = '/';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Intro />
    <IntroCardBox />
    <Prof />
    <CTAlink
        title="SNS"
        subtitle="日々の制作のことや日常のことなどを発信しています"
        items={[
            {
                text: 'Instagram',
                imgSrc: '/assets/image/cta_insta.png',
                imgAlt: '',
                buttonHref: 'https://www.instagram.com/miyake_aoi_web/'
            },
            {
                text: 'X',
                imgSrc: '/assets/image/cta_X.png',
                imgAlt: '',
                buttonHref: 'https://x.com/miyake_aoi_web'
            }
        ]}
    />
    <ColumnsPage
        limit={3}
    />
    <ContactCTA
        titleLine1="料金のご相談だけでもOK"
        titleLine2="初めてのご依頼も丁寧に対応します"
        buttonText="無料で相談する"
        backgroundImage = "/assets/image/contact_cta_bg.jpg"
    />
</BaseLayout>
